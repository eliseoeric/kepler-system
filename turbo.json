{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**", "storybook-static/**"],
      "dependsOn": ["^build"]
    },
    "build:styles": {
      "inputs": ["src/**/*.css"],
      "outputs": ["dist/styles.css"],
      "dependsOn": ["@eliseoeric/tokens#build"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "test": {
      "dependsOn": ["^build"],
      "inputs": [
        "src/**/*.tsx",
        "src/**/*.ts",
        "**/*.test.tsx",
        "**/*.test.ts",
        "**/*.stories.tsx"
      ],
      "outputs": []
    },
    "test:unit": {
      "dependsOn": ["^build"],
      "inputs": [
        "src/**/*.tsx",
        "src/**/*.ts",
        "**/*.test.tsx",
        "**/*.test.ts"
      ],
      "outputs": []
    },
    "test:storybook": {
      "dependsOn": ["^build"],
      "inputs": ["stories/**/*.stories.tsx", "**/*.stories.tsx"],
      "outputs": []
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    },
    "preview-storybook": {
      "dependsOn": ["build"],
      "cache": false,
      "persistent": true
    }
  }
}
